<!-- MAIN CONTENT -->
<div class="container">

<h2> Want to become a tutor? Enter your information! </h2>

<div class="form">
  <form id="user-form">  
  <div class="input-group">
    <span class="input-group-addon" id="basic-addon1 firstname">First Name</span>
      <input type="text" class="form-control" id="first-name" placeholder="First name" aria-describedby="basic-addon1">
  </div> 
  <br>
  <div class="input-group">
    <span class="input-group-addon" id="basic-addon1 lastname">Last Name</span>
    <input type="text" class="form-control" id="last-name" placeholder="Last name" aria-describedby="basic-addon1">
  </div> 
  <br>
  <div class="input-group">
    <span class="input-group-addon" id="basic-addon1 email">Email</span>
    <input type="text" class="form-control" id="email" placeholder="example@email.com" aria-describedby="basic-addon1">
  </div> 
<br>
<br>

  <div class="form-group">
    <label for="inputlg">Please provide 1-3 sentences about yourself.</label>
    <textarea class="form-control" rows="5" id="about"></textarea>
  </div>   
    
    <h3> Please select a subject you will teach </h3>

<div class="row form-group">
  <div class="col-lg-6">
    <label for="tutorValue">Subject List:</label>
    <select class="form-control" id="sel2">
      <option class = "hi" value = 0></option>
      {{#each availSubject}}
        <option class = "hi" value = {{id}}>{{subjectName}}</option>
      {{/each}}
    </select>
  </div>
</div>

<br>

<button type="submit" class="btn btn-default btn-primary">Submit</button>

</form>


</div> <!-- close form div -->



</div> <!-- closing container div  -->


<script src="assets/js/tutor.js"></script> 

