<script type="text/javascript">var allTutors = {{{availTutorArray}}}</script>
<script type="text/javascript">var allSubjects = {{{availSubjArray}}}</script>
<!-- MAIN CONTENT -->
<div class="container">


<div class = "jumbotron deleteJumbotron">
	
  <h2>You Successfully Deleted a Tutor.</h2>

</div>

<h4>Would you like to make another appointment or delete another tutor?</h4>

  <div class="container-fluid searchResults">
      <div class="row tutorRow">
      
       {{#each availTutor}}
       
        <div class="container tutorThumbnailContainer col-xs-6 col-md-3 col-lg-3">
          <div class="thumbnail tutorThumbnail">
            <img src ="assets/img/tutor{{id}}.jpg"> 
            <div class="tutorCaption CRUDCaption">                      
              <h4 class = "capitalize tutorName">{{firstName}}</h4>


            <form action="/admin/{{this.id}}?_method=DELETE" method="POST">
              <button type="submit" class="btn btn-info btn-primary CRUDSubmit" data-toggle="modal" data-target="#myModal">Delete {{firstName}}</button>
            </form>

            <form action="/admin/{{id}}?_method=PUT" method="POST">
                <input type = "hidden" name = "available" value = "0">
                  <button type="submit" class="btn btn-info btn-primary CRUDUpdate" data-toggle="modal" data-target="#myModal">Update Avaialbility</button>
            </form> 
           
            </div> {{!-- end caption --}}

          </div>{{!--  endTutorThumbnail --}}

        </div> {{!-- end tutorThumbnailContainer --}}

      {{/each}}
  
    </div> <!-- close .tutorRow div  -->

  </div> {{!-- end searchResults --}}

<script src="assets/js/student.js"></script> 

</div> <!-- close container div  -->